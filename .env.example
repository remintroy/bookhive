# Firebase Admin SDK credentials for server-side authentication
# Get it from Firebase admin credentials
FIREBASE_ADMIN_PRIVATE_KEY=       # Private key for Firebase Admin SDK
FIREBASE_ADMIN_CLIENT_EMAIL=      # Client email for Firebase Admin SDK
FIREBASE_ADMIN_PROJECT_ID=        # Firebase Project ID

# Node.js environment (e.g., "development", "production")
NODE_ENV="development"

# MongoDB connection strings
MONGODB_URI="mongodb://localhost:27017/bookhive"  # Local MongoDB instance
MONGODB_ATLAS_URI=""                              # MongoDB Atlas connection URI (if using a cloud database)

# Cloudflare R2 storage credentials
CLOUDFLARE_TOKEN_ID=              # Cloudflare API token for authentication
CLOUDFLARE_ACCOUNT_ID=            # Cloudflare account ID
CLOUDFLARE_ACCESS_KEY_ID=         # Cloudflare R2 access key ID
CLOUDFLARE_SECRET_ACCESS_KEY=     # Cloudflare R2 secret access key
CLOUDFLARE_BUCKET_NAME=           # Name of the Cloudflare R2 storage bucket
CLOUDFLARE_REGION="auto"          # Cloudflare R2 region (usually "auto")
CLOUDFLARE_BUCKET_URL=            # Base URL for accessing the R2 bucket

# Public URLs for Cloudflare R2 (used in frontend applications)
NEXT_PUBLIC_CLOUDFLARE_R2_WORKER_URL=  # Worker URL for handling Cloudflare R2 requests
NEXT_PUBLIC_CLOUDFLARE_R2_URL=         # Public URL for direct access to Cloudflare R2 resources
